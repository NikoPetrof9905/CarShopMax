@{
    ViewData["Title"] = "Home Page";
}

<v-row>
    <v-col cols="12">
        <h2>Search</h2>
    </v-col>
    <v-col cols="12" md="10">
        <v-text-field label="Search for something (ex. Honda Civic)"
                      hide-details="auto"></v-text-field>
    </v-col>
    <v-col cols="12" md="2">
        <v-btn color="primary"
               text block>Search</v-btn>
    </v-col>
</v-row>
<v-row>
    <v-col cols="12">
        <h2>My contracts</h2>
    </v-col>
    <v-col cols="12" md="6" xl="4">
        <v-card width="100%">
            <v-img height="200px"
                   src="data:image/png;base64,">
                <v-app-bar flat
                           color="rgba(0, 0, 0, 0)">
                    <v-toolbar-title class="text-h6 white--text pl-0">
                        Car
                    </v-toolbar-title>
                </v-app-bar>
            </v-img>

            <v-card-text>
                <h3>Properties</h3>
                <v-simple-table>
                    <template v-slot:default>
                        <thead>
                            <tr>
                                <th class="text-left">
                                    Property
                                </th>
                                <th class="text-left">
                                    Value
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Offer type</td>
                                <td>Car</td>
                            </tr>
                            <tr>
                                <td>Brand</td>
                                <td>Honda</td>
                            </tr>
                            <tr>
                                <td>Model</td>
                                <td>Civic</td>
                            </tr>
                            <tr>
                                <td>Sub-Model</td>
                                <td>2019</td>
                            </tr>
                            <tr>
                                <td>Price</td>
                                <td>1000 BGN</td>
                            </tr>
                        </tbody>
                    </template>
                </v-simple-table>
                <h3>Description</h3>
                <p>
                    Lorem ipsum dolor sit emet.
                </p>
                <h3>Chats</h3>
                <v-sheet color="teal" class="pa-2 ma-2"
                         elevation="3"
                         rounded block>Hello! I want to get this car</v-sheet>
                <v-sheet color="red" class="pa-2 ma-2"
                         elevation="3"
                         rounded block>No</v-sheet>
                <v-row>
                    <v-col cols="12" md="10">
                        <v-text-field label="Chat"
                                      hide-details="auto"></v-text-field>
                    </v-col>
                    <v-col cols="12" md="2">
                        <v-btn color="primary"
                               text block>Send</v-btn>
                    </v-col>
                </v-row>
            </v-card-text>
            <v-card-actions>
                <v-btn color="green darken-2"
                       text>
                    Finalize
                </v-btn>
                <v-btn color="red darken-2"
                       text>
                    Reject
                </v-btn>
            </v-card-actions>
        </v-card>
    </v-col>
</v-row>
